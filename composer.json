{
    "name": "chicorycom/framework",
    "minimum-stability": "dev",
    "keywords": ["framework", "chicorycom"],
    "license": "MIT",
    "authors": [
        {
            "name": "Assane Sarr",
            "email": "contact@chicorycom.net"
        }
    ],
    "support": {
        "issues": "https://github.com/chicorycom/framework/issues",
        "source": "https://github.com/chicorycom/framework/tree/master"
    },
    "autoload": {
        "files": [
            "src/app/helpers.php"
        ],
        "psr-4" : {
            "App\\" : "src/app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4|8.*",
        "ext-calendar": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "chicorycom/bootstrap": "dev-master"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php -r \"file_exists('phinx.yml') || copy('phinx.example.yml', 'phinx.yml');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "repositories": {
        "chicorycom/bootstrap": {
            "type": "path",
            "url": "/home/assane/dev-doc/web-apps/bootstrap",
            "options": {
                "symlink": true
            }
        }
    }
}
